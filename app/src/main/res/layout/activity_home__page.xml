<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7B68EE"

    tools:context="com.aptech.current_demo.Home_Page">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Career Opportunities"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textStyle="italic" />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/office"
    android:layout_marginTop="1dp" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="150dp">



                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <ImageButton
                            android:id="@+id/ca"
                            android:layout_height="130dp"
                            android:layout_width="130dp"
                            android:background="#7B68EE"
                            android:src="@drawable/globe"
                            android:layout_gravity="center">
                        </ImageButton>
                        <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Current Affairs"
                            android:textColor="#000000"
                        />
                    </LinearLayout>


                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                <ImageButton
                    android:id="@+id/search"
                    android:layout_height="130dp"
                    android:layout_width="130dp"
                    android:background="#7B68EE"
                    android:layout_gravity="center"
                    android:src="@drawable/sear"
                    />
                <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Search Job"
                    android:textColor="#000000"

                />
</LinearLayout>

                <LinearLayout

                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    >

                <ImageButton
                    android:id="@+id/tp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:background="#7B68EE"
                        android:src="@drawable/tuto" />
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Tutorial Point"
                        android:textColor="#000000"

                        />
                </LinearLayout>

                </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                <ImageButton
                    android:id="@+id/news"
                    android:layout_width="130dp"
                        android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:background="#7B68EE"
                        android:src="@drawable/paper" />
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="News"
                        android:textColor="#000000"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >


                <ImageButton
                    android:id="@+id/fc"
                        android:layout_width="130dp"
                            android:layout_height="130dp"
android:layout_gravity="center"
                            android:background="#7B68EE"
                            android:src="@drawable/away" />
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Fresher Corner"
                        android:textColor="#000000"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/menu"
                                android:layout_width="130dp"
                                android:layout_gravity="center"
                                android:layout_height="130dp"
                                android:background="#7B68EE"
                                android:src="@drawable/cric" />
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cricket Scores"
                        android:textColor="#000000"

                        />
                </LinearLayout>
                        </TableRow>

            <TableRow>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                <ImageButton
                    android:id="@+id/setting" android:layout_height="130dp"
                    android:background="#7B68EE"
                    android:src="@drawable/settings"
                    android:layout_gravity="center"
                    android:layout_width="130dp"/>
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Settings"
                        android:textColor="#000000"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <ImageButton
                        android:id="@+id/cu"
                        android:layout_height="130dp"
                        android:layout_width="130dp"
                        android:layout_gravity="center"
                        android:src="@drawable/phone"
                        android:background="#7B68EE"
                       />
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Contact Us"
                        android:textColor="#000000"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >


                <ImageButton
                    android:id="@+id/about"
                    android:layout_height="130dp"
                            android:layout_width="130dp"
                            android:layout_gravity="center"
                            android:background="#7B68EE"
                            android:src="@drawable/admin"/>
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="About Us"
                        android:textColor="#000000"

                        />
                </LinearLayout>
                    </TableRow>


            </TableLayout>

    </LinearLayout>
</ScrollView>

